{# {% extends 'base.html.twig' %} #}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Connexion!!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<metaname="viewport" content="width=device-width, initial-scale=1.0">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
			<link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css')}}">

			{% block stylesheets %}
				<style>

					@import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900 &display=swap");
					* {
						box-sizing: border-box;
						margin: 0;
						padding: 0;
					}
					:root {
						--line-border-fill: #3498db;
						--line-border-empty: #e0e0e0;
						--dark-green: #013237;
						--light-green: #4fa574;
						--white-50: rgba(255, 255, 255, 0.5);
					}

					body {
						height: 80vh;
						font-family: "Poppins", sans-serif;
					}
					.container-fluid {
						height: 100vh;
						width: 100%;
						position: relative;
						background-image: url("assets/img/pharmacienne.jpg");
						background-color: var(--dark-green);
						background-blend-mode: multiply;
						background-size: cover;
						background-position: center;
						display: flex;
						flex-direction: column;
						justify-content: flex-start;
						align-items: center;
					}

					.logo {
						margin: 20px 0;
						display: flex;
						align-items: center;
					}

					.logo img {
						width: 87px;
						height: 75px;
					}

					.logo span {
						font-weight: 700;
						color: #fff;
						font-size: 77px;
					}

					span.text-green-light {
						color: var(--light-green);
					}

					.text-field {
						margin-bottom: 20px;
						color: white;
						display: flex;
						align-items: center;
					}

					.icon {
						color: var(--white-50);
					}
				</style>
			{% endblock %}
		</head>

		{# Body #}

		<body>

			{% block body %}

				<section class="container-fluid">
					<div class="logo">
						<img src="assets/img/Logo.png" alt="">
						<span class="">
							Medi<span class="text-green-light">Serve</span>
						</span>
					</div>
					<div class="wrapper">
						<div class="row">
							<div class="col">
								<form class="login-form" method="post">
									{% if error %}
										<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
									{% endif %}

									{% if app.user %}
										<div class="mb-3">
											Vous etes connecté(e) en tant que
											{{ app.user.userIdentifier }},
											<a href="{{ path('app_logout') }}">Me deconnecter</a>
										</div>
									{% endif %}

									<h1 class="h3 mb-3 font-weight-normal text-light text-center">Veuillez vous Connecter</h1>
										<i class="icon fa-solid fa-user"></i>
										<label class="text-light my-2" for="inputEmail">Email</label>
										<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" autocomplete="email" required autofocus>
									<i class="icon fa-solid fa-lock my-3"></i>
									<label class="text-light my-2" for="inputPassword">Mot de passe</label>
									<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Mot de passe">

									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                        <div class="d-grid gap-2">
                                            <button class="btn btn-primary my-3" type="submit">
                                                Connexion
                                            </button>
                                        </div>

								</form>
							</div>
						</div>
					</div>

				</section>
			{% endblock %}
			{% include "_partials/_footer.html.twig" %}
		</body>
</html>

